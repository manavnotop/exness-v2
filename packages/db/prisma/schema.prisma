generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
 id             String           @id @default(uuid())
  email          String           @unique
  balance        Int
  decimal        Int              @default(4)
  lastLoggedInt  DateTime?
  ExistingTrades ExistingTrades[]
}

enum OrderType {
  short
  long
}

model ExistingTrades {
  id         String    @id @default(uuid())
  openPrice  Int
  leverage   Int
  asset      String
  margin     Int
  quantity   Float
  type       OrderType
  closePrice Int
  pnl        Int
  decimal    Int
  liquidated Boolean
  userId     String
  user       Users     @relation(fields: [userId], references: [id])
  createdAt  DateTime  @default(now())
}